            </Button>
            <Button fx:id="bSeven" focusTraversable="false" layoutX="75.0" layoutY="125.0" mnemonicParsing="false" onAction="#onDigitClick" prefHeight="50.0" prefWidth="50.0" text="7">
               <font>
                  <Font size="24.0" />
               </font>
            </Button>
            <Button fx:id="bEight" focusTraversable="false" layoutX="125.0" layoutY="125.0" mnemonicParsing="false" onAction="#onDigitClick" prefHeight="50.0" prefWidth="50.0" text="8">
               <font>
                  <Font size="24.0" />
               </font>
            </Button>
            <Button fx:id="bNine" focusTraversable="false" layoutX="175.0" layoutY="125.0" mnemonicParsing="false" onAction="#onDigitClick" prefHeight="50.0" prefWidth="50.0" text="9">
               <font>
                  <Font size="24.0" />
               </font>
            </Button>

         </children>
      </Pane>
   </children>
